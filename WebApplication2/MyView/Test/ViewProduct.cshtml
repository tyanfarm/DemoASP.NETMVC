@using WebApplication2.Models;
@model WebApplication2.Models.ProductModel

@{
    Layout = "_Layout";
    var product = ViewData["product"] as ProductModel;
}

<div class="card bg-danger text-white">
    <h1 class="card-header">@product.Name</h1>
    <div class="card-body">
        <p class="card-text">
            ID: @ViewData["ID"]
        </p>
        <p class="card-text">
            Price: @product.Price $
        </p>
    </div>
</div>

@this.Path


